<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.LayananDesa"
    tools:context=".view.getstarted.InternetlostActivity">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="314dp"
        android:src="@drawable/img_internet_lost"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgLost"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opss"
        android:text="Oops!"
        app:layout_constraintTop_toBottomOf="@id/imgLost"
        app:layout_constraintStart_toStartOf="@id/imgLost"
        app:layout_constraintEnd_toEndOf="@id/imgLost"
        android:textColor="#7F7F7F"
        android:fontFamily="@font/poppins"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="Rupanya terdapat masalah pada
koneksi internet anda. Cek Koneksi internet anda lalu coba lagi."
        app:layout_constraintEnd_toEndOf="@id/imgLost"
        app:layout_constraintStart_toStartOf="@id/imgLost"
        app:layout_constraintTop_toBottomOf="@id/opss"
        android:textAlignment="center"
        android:textColor="#7F7F7F"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCobalagi"
        android:text="Coba Lagi"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:textColor="#1ABAFF"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@id/keterangan"
        app:layout_constraintStart_toStartOf="@id/imgLost"
        app:layout_constraintEnd_toEndOf="@id/imgLost"
        android:background="@drawable/backgroundbuttonloginguest"/>

</androidx.constraintlayout.widget.ConstraintLayout>