<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.berita.view.DetailBeritaFragment"
    android:background="@drawable/background1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Layout Skeleton -->
            <include
                android:id="@+id/shimmerDetailBerita"
                layout="@layout/skeleton_detail_berita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <!-- Layout Konten Asli dengan Card Design -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerDetailBerita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingBottom="24dp">

                <!-- Header dengan Back Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/headerCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5FFFFFF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btnBack"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_back_button"
                            android:background="@drawable/bg_circle_button"
                            android:padding="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="16dp"
                            android:contentDescription="Back button"
                            android:tint="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Berita"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@id/btnBack"
                            app:layout_constraintTop_toTopOf="@id/btnBack"
                            app:layout_constraintBottom_toBottomOf="@id/btnBack"
                            android:layout_marginStart="16dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Main Content Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/headerCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_berita">

                        <!-- Image Container dengan rounded corners -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/imageContainer"
                            android:layout_width="0dp"
                            android:layout_height="220dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/imageBerita"
                                android:scaleType="centerCrop"
                                android:background="#E0E0E0"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Date Badge -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/dateBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="@id/imageContainer"
                            app:layout_constraintTop_toBottomOf="@id/imageContainer"
                            android:layout_marginTop="12dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#1A59CDFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tanggalBerita"
                                android:text=""
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="12sp"
                                android:textStyle="normal"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Title with decoration -->
                        <LinearLayout
                            android:id="@+id/titleContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/dateBadge"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="16dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/judulBerita"
                                android:text=""
                                android:textStyle="bold"
                                android:textAlignment="textStart"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="22sp"
                                android:textColor="@color/black"
                                android:lineSpacingExtra="4dp"
                                android:maxLines="2"/>
                        </LinearLayout>

                        <!-- Content dengan padding yang nyaman -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/isiBerita"
                            android:textColor="#404040"
                            android:fontFamily="@font/poppins"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:lineSpacingExtra="6dp"
                            android:textAlignment="textStart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/titleContainer"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>