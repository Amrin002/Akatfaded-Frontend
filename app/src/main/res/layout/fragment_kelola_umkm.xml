<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/umkmSwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Header dengan Back Button -->
        <LinearLayout
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_button"
                android:background="@color/transparant"
                android:layout_marginStart="20dp"
                android:id="@+id/btnBack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola UMKM"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Shimmer Loading -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayoutUmkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/skeleton_umkm_item" />
                <include layout="@layout/skeleton_umkm_item" />
                <include layout="@layout/skeleton_umkm_item" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- RecyclerView untuk List UMKM -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            android:id="@+id/recyclerViewUmkm"/>

        <!-- FAB untuk Tambah UMKM -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addUmkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="80dp"
            android:src="@drawable/ic_add"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>