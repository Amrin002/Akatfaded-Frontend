<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/shimmer_image_berita"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:background="#E0E0E0"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/shimmer_tanggal"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/shimmer_image_berita"
            app:layout_constraintTop_toBottomOf="@id/shimmer_image_berita"/>

        <View
            android:id="@+id/shimmer_judul"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/shimmer_image_berita"
            app:layout_constraintEnd_toEndOf="@id/shimmer_image_berita"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tanggal"/>

        <View
            android:id="@+id/shimmer_judul_2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:background="#E0E0E0"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/shimmer_image_berita"
            app:layout_constraintEnd_toEndOf="@id/shimmer_image_berita"
            app:layout_constraintTop_toBottomOf="@id/shimmer_judul"/>

        <View
            android:id="@+id/shimmer_konten_1"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/shimmer_image_berita"
            app:layout_constraintEnd_toEndOf="@id/shimmer_image_berita"
            app:layout_constraintTop_toBottomOf="@id/shimmer_judul_2"/>

        <View
            android:id="@+id/shimmer_konten_2"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/shimmer_image_berita"
            app:layout_constraintEnd_toEndOf="@id/shimmer_image_berita"
            app:layout_constraintTop_toBottomOf="@id/shimmer_konten_1"/>

        <View
            android:id="@+id/shimmer_konten_3"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/shimmer_image_berita"
            app:layout_constraintEnd_toEndOf="@id/shimmer_image_berita"
            app:layout_constraintTop_toBottomOf="@id/shimmer_konten_2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>