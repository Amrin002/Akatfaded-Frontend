<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="6dp"
        >
        <View
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:id="@+id/imgBerita"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="5dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="20sp"
            android:id="@+id/tvJudulBerita"
            android:background="#DDDDDD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgBerita"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="100dp"/>

        <View
            android:layout_width="100dp"
            android:layout_height="15sp"
            android:id="@+id/tvPenulisBerita"
            android:background="#DDDDDD"
            app:layout_constraintStart_toStartOf="@id/tvJudulBerita"
            app:layout_constraintTop_toBottomOf="@id/tvJudulBerita"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="80dp"
            android:layout_height="15sp"
            app:layout_constraintStart_toEndOf="@id/tvPenulisBerita"
            app:layout_constraintTop_toBottomOf="@id/tvJudulBerita"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvTanggalBerita"
            android:background="#DDDDDD"
            android:textAlignment="textEnd"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:id="@+id/tvKontenBerita"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/tvPenulisBerita"
            app:layout_constraintStart_toEndOf="@id/imgBerita"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>