<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!-- Skeleton Image -->
        <View
            android:id="@+id/skeletonImgUmkm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Skeleton Nama Usaha -->
        <View
            android:id="@+id/skeletonNamaUsaha"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toEndOf="@id/skeletonImgUmkm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/skeletonStatus"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"/>

        <!-- Skeleton Nama Produk -->
        <View
            android:id="@+id/skeletonNamaProduk"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toEndOf="@id/skeletonImgUmkm"
            app:layout_constraintTop_toBottomOf="@id/skeletonNamaUsaha"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"/>

        <!-- Skeleton Harga -->
        <View
            android:id="@+id/skeletonHarga"
            android:layout_width="80dp"
            android:layout_height="14dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toEndOf="@id/skeletonImgUmkm"
            app:layout_constraintTop_toBottomOf="@id/skeletonNamaProduk"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"/>

        <!-- Skeleton Status -->
        <View
            android:id="@+id/skeletonStatus"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeletonNamaUsaha"
            android:layout_marginTop="5dp"/>

        <!-- Skeleton Tanggal -->
        <View
            android:id="@+id/skeletonTanggal"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toEndOf="@id/skeletonImgUmkm"
            app:layout_constraintTop_toBottomOf="@id/skeletonHarga"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>