<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".feature.beranda.view.BerandaFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Modern Header Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary_blue"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp">

                    <!-- Background Pattern -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/header_pattern_overlay"
                        android:alpha="0.1" />

                    <!-- Profile Section -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileCard"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imageProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile_default" />
                    </androidx.cardview.widget.CardView>

                    <!-- Greeting Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintStart_toEndOf="@id/profileCard"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/profileCard"
                        app:layout_constraintBottom_toBottomOf="@id/profileCard">

                        <TextView
                            android:id="@+id/tvHello"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selamat Pagi,"
                            android:textColor="@color/white"
                            android:alpha="0.9"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amrin Alamsyah Bugis"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="18sp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Time Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/timeCard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/profileCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <!-- Background decoration -->
                            <View
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/circle_gradient_bg"
                                android:alpha="0.1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <TextView
                                android:id="@+id/tvDayDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Senin, 27 Juli 2025"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/poppins"
                                android:textSize="14sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10:30"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="32sp"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toBottomOf="@id/tvDayDate"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tvTimeZone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WIT"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/poppins"
                                android:textSize="14sp"
                                android:layout_marginStart="8dp"
                                app:layout_constraintBottom_toBottomOf="@id/tvTime"
                                app:layout_constraintStart_toEndOf="@id/tvTime" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Features Section -->
            <LinearLayout
                android:id="@+id/featuresSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/headerCard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Layanan Cepat"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp" />

                <!-- Features Grid -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bgFitur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="16dp">

                    <!-- Feature Item 1: Pengaduan Surat -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPengaduanSurat"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:layout_constraintWidth_percent="0.47"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/btnPengaduanSurat"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_pengaduan_surat"
                                android:background="@drawable/feature_icon_bg"
                                android:padding="8dp"
                                app:tint="@color/primary_blue"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Pengaduan Surat"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="13sp"
                                android:maxLines="2"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@id/btnPengaduanSurat"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Feature Item 2: Berita -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBerita"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:layout_constraintWidth_percent="0.47"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/btnBerita"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_berita_beranda"
                                android:background="@drawable/feature_icon_bg"
                                android:padding="8dp"
                                app:tint="@color/primary_blue"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Berita"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="13sp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@id/btnBerita"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Feature Item 3: Transparansi APBDes -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAPBDes"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:layout_constraintWidth_percent="0.47"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardPengaduanSurat">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/btnTransparansiApbdes"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_transparansi"
                                android:background="@drawable/feature_icon_bg"
                                android:padding="8dp"
                                app:tint="@color/primary_blue"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Transparansi APBDes"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="13sp"
                                android:maxLines="2"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@id/btnTransparansiApbdes"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Feature Item 4: Keluhan -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardKeluhan"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:layout_constraintWidth_percent="0.47"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardBerita">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/btnKeluhan"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_keluhan"
                                android:background="@drawable/feature_icon_bg"
                                android:padding="8dp"
                                app:tint="@color/primary_blue"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Keluhan"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="13sp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@id/btnKeluhan"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- News Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/featuresSection">

                <!-- Section Header -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/tvBeritaTerkini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berita Terkini"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Semua"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:id="@+id/tvLihatSemua"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- RecyclerView for News -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBerita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="16dp"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/list_berita"
                    tools:itemCount="3" />

                <!-- Shimmer Loading -->
                <include
                    android:id="@+id/shimerBeritaBeranda"
                    layout="@layout/shimer_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>