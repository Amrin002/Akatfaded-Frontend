<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.LayananDesa"
    tools:context=".feature.umkm.view.DetailProdukUmkmFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_button"
            android:background="@color/transparant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Back"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Produk"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="11dp"
            android:paddingStart="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Foto Produk -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFoto"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButton">

            <ImageView
                android:id="@+id/ivFotoProduk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_umkm"
                android:scaleType="centerCrop"
                android:contentDescription="Foto Produk" />

            <!-- Badge Kategori -->
            <TextView
                android:id="@+id/tvKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_kategori"
                android:text="Makanan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_margin="12dp"
                android:layout_gravity="start|top" />

        </androidx.cardview.widget.CardView>

        <!-- Info Produk -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFoto">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Nama Usaha -->
                <TextView
                    android:id="@+id/tvNamaUsaha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Warung Makan Sederhana"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Nama Produk -->
                <TextView
                    android:id="@+id/tvNamaProduk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nasi Gudeg Spesial"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNamaUsaha" />

                <!-- Harga -->
                <TextView
                    android:id="@+id/tvHarga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 15.000"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNamaProduk" />

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/labelDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Produk:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHarga" />

                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gudeg autentik dengan cita rasa tradisional yang lezat dan menggugah selera. Dibuat dengan bumbu pilihan dan santan segar."
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelDeskripsi" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Informasi Kontak -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardKontak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardInfo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/labelKontak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Kontak:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Nomor Telepon -->
                <LinearLayout
                    android:id="@+id/layoutTelepon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelKontak">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Phone" />

                    <TextView
                        android:id="@+id/tvNomorTelepon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="085231125221"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/textColor" />

                </LinearLayout>

                <!-- Social Media -->
                <TextView
                    android:id="@+id/labelSosmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media Sosial:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutTelepon" />

                <LinearLayout
                    android:id="@+id/layoutSocialMedia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelSosmed">

                    <!-- Facebook -->
                    <ImageButton
                        android:id="@+id/btnFacebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_facebook"
                        android:background="@drawable/bg_social_media_button"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        android:contentDescription="Facebook" />

                    <!-- Instagram -->
                    <ImageButton
                        android:id="@+id/btnInstagram"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_instagram"
                        android:background="@drawable/bg_social_media_button"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        android:contentDescription="Instagram" />

                    <!-- TikTok -->
                    <ImageButton
                        android:id="@+id/btnTiktok"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_tiktok"
                        android:background="@drawable/bg_social_media_button"
                        android:visibility="gone"
                        android:contentDescription="TikTok" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardKontak">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnHubungiWhatsApp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/whatsapp_green">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_wa"

                        android:layout_marginEnd="8dp"
                        android:contentDescription="WhatsApp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hubungi"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnShare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_share"
                    android:layout_gravity="center"
                    android:contentDescription="Share" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>