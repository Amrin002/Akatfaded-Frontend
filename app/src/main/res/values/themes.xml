<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LayananDesa" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/primary_blue_light</item>
        <item name="colorSecondaryVariant">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Typography -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.LayananDesa.Button</item>
        <item name="textInputStyle">@style/Widget.LayananDesa.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.LayananDesa.CardView</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="N">false</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.LayananDesa" parent="Base.Theme.LayananDesa" />

    <!-- Modern theme for young users -->
    <style name="Theme.Modern" parent="Base.Theme.LayananDesa">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <!-- More vibrant colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSecondary">@color/primary_blue_light</item>
    </style>

    <!-- Simple theme for elderly users -->
    <style name="Theme.Simple" parent="Base.Theme.LayananDesa">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <!-- Higher contrast -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <!-- Larger touch targets -->
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Component Styles -->

    <!-- Button Style -->
    <style name="Widget.LayananDesa.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">56dp</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.LayananDesa.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- CardView Style -->
    <style name="Widget.LayananDesa.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="shapeAppearance">@style/ShapeAppearance.LayananDesa.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.LayananDesa.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemRippleColor">@color/primary_blue_light</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondary_blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.LayananDesa.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.LayananDesa.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>



    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.LayananDesa.Dialog</item>
    </style>

    <style name="ShapeAppearance.LayananDesa.Dialog" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ModernBottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@drawable/bottom_nav_item_background</item>
        <item name="itemRippleColor">@color/primary_blue_light</item>
        <item name="itemTextColor">@color/bottom_nav_modern_colors</item>
        <item name="itemIconTint">@color/bottom_nav_modern_colors</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="SimpleBottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemRippleColor">@color/primary_blue_light</item>
        <item name="itemTextColor">@color/bottom_nav_modern_colors</item>
        <item name="itemIconTint">@color/bottom_nav_modern_colors</item>
        <item name="itemTextAppearanceActive">@style/SimpleBottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/SimpleBottomNavTextInactive</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="SimpleBottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="SimpleBottomNavTextInactive">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:alpha">0.7</item>
    </style>

</resources>