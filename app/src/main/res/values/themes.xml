        <item name="colorPrimary">@color/colorPrimary</item>

    </style>

    <style name="Theme.Modern" parent="Theme.Material3.DayNight">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
</resources>